        <class>br.com.imunita.vacinasweb.model.entity.TipoFuncionario</class>
        <class>br.com.imunita.vacinasweb.model.entity.Usuario</class>
        <class>br.com.imunita.vacinasweb.model.entity.Vacina</class>
        <class>br.com.imunita.vacinasweb.model.entity.Vacinacao</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="jboss.as.jpa.providerModule" value="org.hibernate"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
