<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="VacinasWeb_PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <non-jta-data-source>java:/jboss/datasources/VacinasWebDS</non-jta-data-source>
        <class>br.com.imunita.vacinasweb.model.entity.Bairro</class>
        <class>br.com.imunita.vacinasweb.model.entity.Cidade</class>
        <class>br.com.imunita.vacinasweb.model.entity.Contato</class>
        <class>br.com.imunita.vacinasweb.model.entity.Empresa</class>
        <class>br.com.imunita.vacinasweb.model.entity.Endereco</class>
        <class>br.com.imunita.vacinasweb.model.entity.EntradaEstoqueVacina</class>
        <class>br.com.imunita.vacinasweb.model.entity.Estado</class>
        <class>br.com.imunita.vacinasweb.model.entity.EstoqueVacina</class>
        <class>br.com.imunita.vacinasweb.model.entity.Funcionario</class>
        <class>br.com.imunita.vacinasweb.model.entity.LoteVacina</class>
        <class>br.com.imunita.vacinasweb.model.entity.Paciente</class>
        <class>br.com.imunita.vacinasweb.model.entity.Perfil</class>
